<!--
  /**
  * @file appinfo/database.xml
  * @brief Database scheme definition for apps table
  * @author Christian Reiner
  */
 -->

<database>
	<name>*dbname*</name>
	<create>true</create>
	<overwrite>false</overwrite>
	<charset>utf8</charset>
	<table>
		<name>*dbprefix*shorty</name>
		<declaration>
		<field>
			<name>id</name>
			<type>text</type>
			<length>12</length>
			<notnull>true</notnull>
		</field>
		<field>
			<name>status</name>
			<type>text</type>
			<length>10</length>
			<default>shared</default>
			<notnull>true</notnull>
		</field>
		<field>
			<name>title</name>
			<type>text</type>
			<length>1024</length>
			<default></default>
			<notnull>true</notnull>
		</field>
		<field>
			<name>favicon</name>
			<type>text</type>
			<length>1024</length>
			<default></default>
			<notnull>false</notnull>
		</field>
		<field>
			<name>source</name>
			<type>text</type>
			<length>500</length>
			<notnull>true</notnull>
		</field>
		<field>
			<name>target</name>
			<type>text</type>
			<length>4096</length>
			<notnull>true</notnull>
		</field>
		<field>
			<name>user</name>
			<type>text</type>
			<length>64</length>
			<notnull>true</notnull>
		</field>
		<field>
			<name>until</name>
			<type>date</type>
			<notnull>false</notnull>
			<default></default>
		</field>
		<field>
			<name>created</name>
			<type>date</type>
			<notnull>false</notnull>
			<default></default>
		</field>
		<field>
			<name>accessed</name>
			<type>integer</type>
			<unsigned>true</unsigned>
			<length>8</length>
			<notnull>false</notnull>
			<default></default>
		</field>
		<field>
			<name>clicks</name>
			<type>integer</type>
			<unsigned>true</unsigned>
			<length>8</length>
			<default>0</default>
			<notnull>true</notnull>
			<unsigned>true</unsigned>
		</field>
		<field>
			<name>notes</name>
			<type>text</type>
			<length>4096</length>
			<default></default>
			<notnull>true</notnull>
		</field>

		<index>
			<name>index_shorty_id</name>
			<unique>true</unique>
			<field>
				<name>id</name>
				<sorting>descending</sorting>
			</field>
		</index>
		<index>
			<name>index_shorty_user</name>
			<unique>false</unique>
			<field>
				<name>user</name>
				<sorting>ascending</sorting>
			</field>
		</index>
		<index>
			<name>index_shorty_source</name>
			<unique>false</unique>
			<field>
				<name>source</name>
				<sorting>ascending</sorting>
			</field>
		</index>
		</declaration>
	</table>
</database>
